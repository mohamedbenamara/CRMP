@model IEnumerable<CRMP.Domain.Entities.Promotion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/BackLayout.cshtml";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped jambo_table bulk_action">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.promoDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.promoDateD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.promoDateF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.promoPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product.prodName)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.promoDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.promoDateD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.promoDateF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.promoPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product.prodName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PromotionId }) |
                
                    @Html.ActionLink("Delete", "Delete", new { id = item.PromotionId })
                </td>
            </tr>
        }
    }

</table>
